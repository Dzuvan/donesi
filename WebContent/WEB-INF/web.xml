<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>donesi</display-name>
	<filter>
		<description>Filter koji redirektuje neulogovane korisnike na login.jsp stranicu</description>
		<display-name>Authorization Filter</display-name>
		<filter-name>AuthorizationFilter</filter-name>
		<filter-class>util.AuthorizationFilter</filter-class>
		<init-param>
			<param-name>login-page</param-name>
			<param-value>/WEB-INF/user/login.jsp</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>AuthorizationFilter</filter-name>
		<url-pattern>*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>servlets.user.LoginServlet</servlet-class>
		<init-param>
			<param-name>failure-page</param-name>
			<param-value>/WEB-INF/user/login.jsp</param-value>
		</init-param>
		<init-param>
			<param-name>success-page</param-name>
			<param-value>profile</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>SignupServlet</servlet-name>
		<servlet-class>servlets.user.SignupServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>servlets.user.LogoutServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ProfileServlet</servlet-name>
		<servlet-class>servlets.user.ProfileServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>WelcomeServlet</servlet-name>
		<servlet-class>servlets.WelcomeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditProfileServlet</servlet-name>
		<servlet-class>servlets.user.EditProfileServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ArticleListServlet</servlet-name>
		<servlet-class>servlets.article.ArticleListServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditArticleServlet</servlet-name>
		<servlet-class>servlets.article.EditArticleServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteArticleServlet</servlet-name>
		<servlet-class>servlets.article.DeleteArticleServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreateArticleServlet</servlet-name>
		<servlet-class>servlets.article.CreateArticleServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>RestaurantListServlet</servlet-name>
		<servlet-class>servlets.restaurant.RestaurantListServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>CreateRestaurantServlet</servlet-name>
		<servlet-class>servlets.restaurant.CreateRestaurantServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>EditRestaurantServlet</servlet-name>
		<servlet-class>servlets.restaurant.EditRestaurantServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DeleteRestaurantServlet</servlet-name>
		<servlet-class>servlets.restaurant.DeleteRestaurantServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SignupServlet</servlet-name>
		<url-pattern>/signup</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditProfileServlet</servlet-name>
		<url-pattern>/editUser</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>WelcomeServlet</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ProfileServlet</servlet-name>
		<url-pattern>/profile</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ArticleListServlet</servlet-name>
		<url-pattern>/articleList</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditArticleServlet</servlet-name>
		<url-pattern>/editArticle</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteArticleServlet</servlet-name>
		<url-pattern>/deleteArticle</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateArticleServlet</servlet-name>
		<url-pattern>/createArticle</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>RestaurantListServlet</servlet-name>
		<url-pattern>/restaurantList</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>CreateRestaurantServlet</servlet-name>
		<url-pattern>/createRestaurant</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditRestaurantServlet</servlet-name>
		<url-pattern>/editRestaurant</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DeleteRestaurantServlet</servlet-name>
		<url-pattern>/deleteRestaurant</url-pattern>
	</servlet-mapping>
</web-app>